<div class="section">
    <div class="container cont">
        <div class="row">
            <div class="col-sm-12">
            <h3>Waiting list</h3>
                <% if @pendingstudents.size == 0 %>
                <p>There are no students in the waiting list</p>
                <% else %>
                <% @pendingstudents.each do |s| %>
                <tr>
                    <td><%= s.unmid %></td>
                    <td><%= s.email %></td>
                    <td><%= s.name %></td>
                    <% if WorkshopsStudent.select(:workshop_id).where(:unmid => s.unmid).size >= 4 %>
                    <td><%= link_to "Move to issued section" , admin_move_path(:id => s.id) , class: "btn btn-default", data: { confirm: "Are you sure?" }%></td>
                    <% else %>
                    <td>This student didnt attend at least 4 workshops</td>
                    <% end %>
                    <td><%= link_to "Delete" , admin_deletestudent_path(:id => s.id) ,:method => :delete, class: "btn btn-default", data: { confirm: "Are you sure?" }%></td>
                </tr><br>
                <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
<script>
(function(window, location) {
  history.replaceState(null, document.title, location.pathname+"#!/history");
  history.pushState(null, document.title, location.pathname);

  window.addEventListener("popstate", function() {
    if(location.hash === "#!/history") {
    history.replaceState(null, document.title, location.pathname);
    setTimeout(function(){
      location.replace("<%= admin_index_path %>");
    },0);
    }
  }, false);
}(window, location));
</script>