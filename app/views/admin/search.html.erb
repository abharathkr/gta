<div class="section">
<div class="container">
<div class="col-xs-12">
	<div class="row">
		<div class="col-xs-6">
		<% if @student %>
		<h5>Student Application Details</h5>
		<table class="table table-bordered table-hover table-condensed">
		<thead>
	      <tr>
	        <th>UNM ID</th>
	        <th>Name</th>
	        <th>Email</th>
	      </tr>
	    </thead>
		<tr>
		<td><%= @student.unmid %></td>
		<td><%= @student.name %></td>
		<td><%= @student.email %></td>
		</tr>
		</table>
		<table class="table table-bordered table-hover table-condensed">
		<thead>
	      <tr>
	        <th>Year</th>
	        <th>Semester</th>
	        <th>Workshop Name</th>
	      </tr>
	    </thead>
		<tr>
		<td><%= @studentworkshops.y1 %></td>
		<td><%= @studentworkshops.s1 %></td>
		<td><%= @studentworkshops.n1 %></td>
		</tr>
		<tr>
		<td><%= @studentworkshops.y2 %></td>
		<td><%= @studentworkshops.s2 %></td>
		<td><%= @studentworkshops.n2 %></td>
		</tr>
		<tr>
		<td><%= @studentworkshops.y3 %></td>
		<td><%= @studentworkshops.s3 %></td>
		<td><%= @studentworkshops.n3 %></td>
		</tr>
		<tr>
		<td><%= @studentworkshops.y4 %></td>
		<td><%= @studentworkshops.s4 %></td>
		<td><%= @studentworkshops.n4 %></td>
		</tr>
		</table>
		<% end %>
		<% if @workshops.size > 0 %>
		<h4>Student Details as per admin records</h4>
		<table class="table table-bordered table-hover table-condensed">
		<thead>
	      <tr>
	        <th>UNM ID</th>
	        <th>Name</th>
	        <th>Email</th>
	      </tr>
	    </thead>
	    <% @workshops.first do |w|%>
		<tr>
		<td><%= w.unmid %></td>
		<td><%= w.name %></td>
		<td><%= w.email %></td>
		</tr>
		<% end %>
		</table>
		<table class="table table-bordered table-hover table-condensed">
		<thead>
	      <tr>
	        <th>Year</th>
	        <th>Semester</th>
	        <th>Workshop Name</th>
	      </tr>
	    </thead>
	    <% @workshops.each do |w|%>
		<% @w = Workshop.find_by(id: w.workshop_id) %>
		<tr>
		<td><%= @w.year %></td>
		<td><%= @w.semester %></td>
		<td><%= @w.name %></td>
		</tr>
		<% end %>
		</table>
		<% else %>
		<p>Student not found</p>
		<% end %>
		</div>
	</div>
</div>
</div>
</div>