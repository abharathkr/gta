<div class="section">
<div class="container" id="cont1">
<div class="col-xs-12">
	<div class="row">
		<div class="col-xs-12">
		<h3 class="text-primary">Please enter your UNM ID to check whether you have applied for the certificate or not:</h3>
		</div>
		<%= form_tag('/students/search', :method => 'get') do %>
		<div class="col-xs-6">
		<%= number_field_tag :search, params[:search], class: "form-control" %>
		</div>
		<%= submit_tag "Submit", :name => nil, class: "btn btn-success" %>
		<% end %>
	</div>
</div>
</div>
</div>
<div class="section" >
<div class="container" id="cont2">
	<div class="col-xs-12">
		<h3>New Student</h3><br>
		<%= render 'form' %>
	</div>
</div>
</div>